{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Learning Module",
  "description": "Schema for educational learning modules in the age-tiered curriculum system",
  "type": "object",
  "required": [
    "id",
    "title",
    "age_tier",
    "subject_area",
    "sensitivity_level",
    "requires_parental_consent",
    "safeguarding_reviewed",
    "neutrality_reviewed",
    "authorship",
    "version"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the learning module",
      "pattern": "^module_[a-zA-Z0-9_-]+$",
      "examples": ["module_math_101", "module_puberty_education_t2"]
    },
    "title": {
      "type": "string",
      "description": "Title of the learning module",
      "minLength": 1,
      "maxLength": 200,
      "examples": ["Understanding Puberty", "Introduction to Democracy"]
    },
    "age_tier": {
      "type": "integer",
      "description": "Age tier for which this module is designed (1-4)",
      "minimum": 1,
      "maximum": 4,
      "examples": [1, 2, 3, 4]
    },
    "subject_area": {
      "type": "string",
      "description": "Primary subject area or discipline",
      "minLength": 1,
      "maxLength": 100,
      "examples": [
        "Mathematics",
        "Science",
        "History",
        "Civic Education",
        "Health Education",
        "Media Literacy"
      ]
    },
    "sensitivity_level": {
      "type": "string",
      "description": "Sensitivity classification for the content",
      "enum": ["low", "moderate", "high"],
      "examples": ["low", "moderate", "high"]
    },
    "requires_parental_consent": {
      "type": "boolean",
      "description": "Whether explicit parental consent is required before learner access",
      "examples": [true, false]
    },
    "safeguarding_reviewed": {
      "type": "object",
      "description": "Safeguarding review status and details",
      "required": ["reviewed", "reviewed_by", "reviewed_date"],
      "properties": {
        "reviewed": {
          "type": "boolean",
          "description": "Whether safeguarding review has been completed"
        },
        "reviewed_by": {
          "type": "string",
          "description": "Name or identifier of the safeguarding reviewer"
        },
        "reviewed_date": {
          "type": "string",
          "format": "date",
          "description": "Date of safeguarding review (ISO 8601 format)"
        },
        "approved": {
          "type": "boolean",
          "description": "Whether the module was approved for delivery"
        },
        "notes": {
          "type": "string",
          "description": "Any notes or concerns from the safeguarding review"
        }
      }
    },
    "neutrality_reviewed": {
      "type": "object",
      "description": "Neutrality review status and details",
      "required": ["reviewed", "reviewed_by", "reviewed_date"],
      "properties": {
        "reviewed": {
          "type": "boolean",
          "description": "Whether neutrality review has been completed"
        },
        "reviewed_by": {
          "type": "string",
          "description": "Name or identifier of the neutrality reviewer"
        },
        "reviewed_date": {
          "type": "string",
          "format": "date",
          "description": "Date of neutrality review (ISO 8601 format)"
        },
        "approved": {
          "type": "boolean",
          "description": "Whether the module was approved for neutrality"
        },
        "notes": {
          "type": "string",
          "description": "Any notes or concerns from the neutrality review"
        }
      }
    },
    "authorship": {
      "type": "object",
      "description": "Information about module creators and contributors",
      "required": ["primary_author", "creation_date"],
      "properties": {
        "primary_author": {
          "type": "string",
          "description": "Name or identifier of the primary author"
        },
        "contributors": {
          "type": "array",
          "description": "Additional contributors to the module",
          "items": {
            "type": "string"
          }
        },
        "creation_date": {
          "type": "string",
          "format": "date",
          "description": "Date the module was created (ISO 8601 format)"
        },
        "organisation": {
          "type": "string",
          "description": "Organisation responsible for the module"
        },
        "funding_source": {
          "type": "string",
          "description": "Funding source or sponsor, if applicable"
        },
        "conflicts_of_interest": {
          "type": "string",
          "description": "Any disclosed conflicts of interest"
        }
      }
    },
    "version": {
      "type": "string",
      "description": "Version number of the module",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "notes": {
      "type": "string",
      "description": "Additional notes, instructions, or context for the module",
      "maxLength": 2000
    },
    "learning_objectives": {
      "type": "array",
      "description": "List of learning objectives for the module",
      "items": {
        "type": "string"
      }
    },
    "topics_covered": {
      "type": "array",
      "description": "Detailed list of topics covered in the module",
      "items": {
        "type": "string"
      }
    },
    "duration_minutes": {
      "type": "integer",
      "description": "Expected duration to complete the module in minutes",
      "minimum": 1
    },
    "language": {
      "type": "string",
      "description": "Primary language of the module (ISO 639-1 code)",
      "pattern": "^[a-z]{2}$",
      "examples": ["en", "es", "fr", "ar"]
    },
    "cultural_adaptation": {
      "type": "string",
      "description": "Region or culture for which this module is adapted",
      "examples": ["UK", "US", "UAE", "Global"]
    }
  }
}
